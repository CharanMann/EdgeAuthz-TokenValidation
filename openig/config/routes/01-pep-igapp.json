{
  "name": "01-pep-igApp",
  "baseURI": "http://igApp.example.com:8081",
  "condition": "${matches(request.uri.path, '^/home')}",
  "monitor": false,
  "capture": "all",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "SingleSignOnFilter-1",
          "type": "SingleSignOnFilter",
          "config": {
            "amHandler": "ForgeRockClientHandler",
            "openamUrl": "${frConfigs.amUrl}",
            "realm": "${frConfigs.amRealm}",
            "cookieName": "${frConfigs.ssoCookieName}"
          },
          "capture": "all"
        },
        {
          "name": "PolicyEnforcementFilter-1",
          "type": "PolicyEnforcementFilter",
          "config": {
            "openamUrl": "${frConfigs.amUrl}",
            "pepUsername": "${frConfigs.amPolicyAdminUid}",
            "pepPassword": "${frConfigs.amPolicyAdminPw}",
            "pepRealm": "${frConfigs.amRealm}",
            "realm": "${frConfigs.amRealm}",
            "application": "${frConfigs.igSampleApp}",
            "ssoTokenSubject": "${contexts.ssoToken.value}"
          },
          "capture": "all"
        },
        {
          "comment": "Set JWT cookie",
          "name": "SetJWTCookie",
          "type": "ScriptableFilter",
          "config": {
            "type": "application/x-groovy",
            "file": "createJWT.groovy",
            "args": {
              "subject": "testSub"
            }
          },
          "capture": "all"
        },
        {
          "name": "addJWTHeader",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "add": {
              "jwtHeader": [ "${attributes.jwtToken}" ]
            }
          },
          "capture": "all"
        }
      ],
      "handler": "ClientHandler"
    },
    "capture": "all"
  }
}