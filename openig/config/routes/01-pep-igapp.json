{
  "name": "01-pep-igApp",
  "baseURI": "http://igApp6.example.com:8081",
  "condition": "${matches(request.uri.path, '^/home')}",
  "auditService": "JSONAuditService",
  "monitor": false,
  "capture": "all",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "SingleSignOnFilter-1",
          "type": "SingleSignOnFilter",
          "config": {
            "amService": "AMService",
            "loginEndpoint": "${frConfigs.amUrl}?realm=${frConfigs.amRealm}&service=protectedTree&goto=${urlEncodeQueryParameterNameOrValue(contexts.router.originalUri)}"
          },
          "capture": "all"
        },
        {
          "name": "PolicyEnforcementFilter-1",
          "type": "PolicyEnforcementFilter",
          "config": {
            "pepUsername": "${frConfigs.amPolicyAdminUid}",
            "pepPassword": "${frConfigs.amPolicyAdminPw}",
            "pepRealm": "${frConfigs.amRealm}",
            "application": "${frConfigs.igSampleApp}",
            "ssoTokenSubject": "${contexts.ssoToken.value}",
            "amService": "AMService"
          },
          "capture": "all"
        },
        {
          "name": "getAttribute",
          "type": "ScriptableFilter",
          "config": {
            "type": "application/x-groovy",
            "source": [
              "def isMemberOf = contexts.policyDecision.attributes['isMemberOf']",
              "logger.info(\"isMemberOf attribute value: $isMemberOf\")",
              "if (isMemberOf != null) {",
              " attributes.isMemberOf = isMemberOf[0]",
              "  return next.handle(context, request)",
              "} else {",
              "  return next.handle(context, request)",
              "}"
            ]
          },
          "capture": "all"
        },
        {
          "name": "addPolicyResponseHeader",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "add": {
              "group": [
                "${attributes.isMemberOf}"
              ]
            }
          },
          "capture": "all"
        },
        {
          "name": "SessionInfoFilter",
          "type": "SessionInfoFilter",
          "config": {
            "amService": "AMService"
          },
          "capture": "all"
        },
        {
          "name": "addSessionInfoHeaders",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "add": {
              "X-IG-SessionInfo": [ "username: ${contexts.amSession.username}, realm: ${contexts.amSession.realm}, AuthLevel: ${contexts.amSession.properties.AuthLevel}, maxSessionExpirationTime : ${contexts.amSession.maxSessionExpirationTime}" ]
            }
          },
          "capture": "all"
        }
      ],
      "handler": "ClientHandler"
    },
    "capture": "all"
  }
}