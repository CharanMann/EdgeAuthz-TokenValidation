{
  "baseURI": "http://openam551.example.com:8989",
  "condition": "${matches(request.uri.path, '^/openam/identity/isTokenValid')}",
  "capture": "all",
  "handler": {
    "type": "Chain",
    "capture": "all",
    "config": {
      "filters": [
        {
          "name": "addSSOHeader",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "add": {
              "cookie": [
                "${frConfigs.ssoCookieName}=${request.form.tokenid[0]}"
              ]
            }
          },
          "capture": "all"
        },
        {
          "name": "checkResponse",
          "type": "SwitchFilter",
          "config": {
            "onResponse": [
              {
                "condition": "${response.status.code == 302}",
                "handler": {
                  "name": "invalidToken",
                  "type": "StaticResponseHandler",
                  "config": {
                    "status": 200,
                    "headers": {
                      "content-type": [
                        "text/plain"
                      ]
                    },
                    "entity": "boolean=false"
                  },
                  "capture": "all"
                }
              },
              {
                "condition": "${response.status.code == 200}",
                "handler": {
                  "name": "validToken",
                  "type": "StaticResponseHandler",
                  "config": {
                    "status": 200,
                    "headers": {
                      "content-type": [
                        "text/plain"
                      ]
                    },
                    "entity": "boolean=true"
                  },
                  "capture": "all"
                }
              }
            ]
          },
          "capture": "all"
        },
        {
          "name": "amSSOFilter",
          "type": "SingleSignOnFilter",
          "config": {
            "amHandler": "ForgeRockClientHandler",
            "openamUrl": "${frConfigs.amUrl}",
            "realm": "${frConfigs.amRealm}",
            "cookieName": "${frConfigs.ssoCookieName}"
          },
          "capture": "all"
        }
      ],
      "handler": {
        "name": "validSessionHandler",
        "type": "StaticResponseHandler",
        "config": {
          "status": 200,
          "headers": {
            "content-type": [
              "text/plain"
            ]
          },
          "entity": "boolean=true"
        },
        "capture": "all"
      }
    }
  },
  "auditService": "JSONAuditService"
}
